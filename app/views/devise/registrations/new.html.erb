<div class="form-page">
	<h2><%= t('devise.views.sign_up') %></h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<div class="form-group">
			<% if resource.errors.any? %>
		  <div class="alert alert-danger"><%= devise_error_messages! %></div>
		  <% end %>

		  <div class="row">
			  <div class="form-group col-md-6">
			  	<%= f.label :first_name %><br />
			  	<%= f.text_field :first_name, :autofocus => true, class: "form-control" %>
			  </div>
			  <div class="form-group col-md-6">
			  	<%= f.label :last_name %><br />
			  	<%= f.text_field :last_name, :autofocus => true, class: "form-control" %>
			  </div>
		  </div>

		  <div class="row">
		  	<div class="form-group col-md-6">
		  		<%= f.label :birth_date %><br />
		  		<%= f.date_field :birth_date, class: "form-control" %>
		  	</div>
		  	<div class="form-group col-md-6">
		  		<%= f.label :gender %><br />
		  		<%= f.select :gender, gender_options, {}, class: "form-control" %>
		  	</div>
		  </div>

		  <div class="row">
		  	<div class="form-group col-md-6">
		  		<%= f.label :city %><br />
		  		<%= f.text_field :city, class: "form-control" %>
		  	</div>
		  	<div class="form-group col-md-6">
		  		<%= f.label :state %><br />
		  		<%= f.select :state, brazilian_states, {}, class: "form-control" %>
		  	</div>
		  </div>

		  <div class="row">
			  <div class="form-group col-md-12">
			  	<%= f.label :username %><br />
			  	<%= f.text_field :username, :autofocus => true, class: "form-control" %>
			  </div>
			</div>

		  <div class="row">
			  <div class="form-group col-md-12">
			  	<%= f.label :email %><br />
			  	<%= f.email_field :email, :autofocus => true, class: "form-control" %>
			  </div>
			</div>

			<div class="row">
		  	<div class="form-group col-md-12">
		  		<%= f.label :password %><br />
		  		<%= f.password_field :password, class: "form-control" %>
		  	</div>
		  </div>

		  <div class="row">
		  	<div class="form-group col-md-12">
		  		<%= f.label :password_confirmation %><br />
		  		<%= f.password_field :password_confirmation, class: "form-control" %>
		  	</div>
		  </div>

		  <%= f.file_field :profile_picture %>

		  <div class="row">
		  	<div class="col-md-12">
		  		<%= f.submit t('devise.views.sign_up'), class: "btn btn-lg btn-primary btn-block" %>
		  	</div>
		  </div>
	  </div>
	<% end %>
</div>