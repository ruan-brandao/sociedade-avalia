<div class="row">
  <%= div_for political_party, class: ".col-sm-8" do %>
    <%= image_tag 'http://www.pt.org.br/wp-content/themes/pt/library/images/logo-site.png', class: "political-party-picture" %>

    <div class="political-party-info">
      <%#= image_tag political_party.picture.url, class: "political-party-picture" %>
      <%= political_party.name %><br>
      <%= political_party.siglum %> - <%= political_party.number.to_i %><br>
      <%= political_party.position %>
    </div>

    <div class="progress politician-like-bar">
      <div class="progress-bar progress-bar-success" style="width: <%= likes_percentage(political_party) %>%">
      </div>
      <div class="progress-bar progress-bar-danger" style="width: <%= dislikes_percentage(political_party) %>%">
      </div>
    </div>

    <div class="political-party-like btn-group">
      <button type="button" class="btn btn-default like">
      <%= link_to fa_icon("thumbs-up lg"), political_party_likes_like_path(political_party_id: political_party.id) %>
      <%= political_party.likes %>
      </button>
      
      <button type="button" class="btn btn-default dislike">
      <%= link_to fa_icon("thumbs-down lg"), political_party_likes_dislike_path(political_party_id: political_party.id) %>
      <%= political_party.dislikes %>
      </button>
    </div>

    <% if current_user.try(:admin?) %>
      <%= link_to 'Editar Partido', edit_political_party_path(political_party) %>
      <%= link_to 'Destroy', political_party, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
</div>
