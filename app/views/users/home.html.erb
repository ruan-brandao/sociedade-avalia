<h1>Olรก <%= current_user.full_name %></h1>

<%= form_for(Post.new) do |f| %>
	<div class="row">
		<div class="col-md-9"><%= f.text_area :content, id: 'post-input', class: 'form-control post-input', rows: '3' %></div>
		<div class="col-md-3"><%= f.submit 'Postar', id: 'post-button', class: 'btn btn-lg btn-primary btn-block' %></div>
	</div>
<% end %>

<%= render @posts %>