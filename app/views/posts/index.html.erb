<h1>Listing posts</h1>

<div id="posts">
  <%= render @posts %>
</div>
<br>

<% if user_signed_in? %>
	<%= form_for(Post.new, remote: true) do |f| %>
	  <div class="field">
	    <%= f.label :content %><br>
	    <%= f.text_area :content %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
<% end %>

