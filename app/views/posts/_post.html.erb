<div class="row">
	<%= div_for post, :class => ".col-sm-8" do %>

		<div class="post-author">
			<%= image_tag post.user.profile_picture.url, class: "post-author-picture" %>
			<%= link_to post.user.full_name, "/#{post.user.username}" %><br>
			<%= link_to time_ago_in_words(post.created_at), post %>
		</div>

		<% if user_signed_in? && current_user == post.user %>
			<div class="btn-group post-options">
			  <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
			     <i class="fa fa-caret-down"></i>
			  </button>
			  <ul class="dropdown-menu pull-right" role="menu">
				  <li><%= link_to 'Edit', edit_post_path(post) %></li>
				  <li><%= link_to 'Destroy', post, method: :delete, remote: true %></li>
			  </ul>
			</div>
		<% end %>

		<div class="post-content">
			<%= post.content %>
		</div>
	  

	  <div class="post-footer">
			<span class="like">
				<i class="fa fa-thumbs-o-up fa-lg thumb-icon"></i>
				<%= link_to 'Like', post_likes_like_path(post) %>
				<%= post.post_likes.select(:value).count %>
			</span>
		  <span class="dislike">
		  	<i class="fa fa-thumbs-o-down fa-lg thumb-icon"></i>
		  	<%= link_to 'Dislike', post_likes_dislike_path(post) %>
				<%= post.post_likes.count - post.post_likes.select(:value).count %>
		  </span>
		</div>

	<% end %>
</div>