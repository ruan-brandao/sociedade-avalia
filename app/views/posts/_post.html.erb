<div class="row">
	<%= div_for post, :class => ".col-sm-8" do %>

		<div class="post-author">
			<%= image_tag post.user.profile_picture.url, class: "post-author-picture" %>
			<%= link_to post.user.full_name, "/#{post.user.username}" %><br />
			<%= link_to time_ago_in_words(post.created_at), post %>
		</div>

		<% if user_signed_in? && current_user == post.user %>
			<div class="btn-group post-options">
			  <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
			     <i class="fa fa-caret-down"></i>
			  </button>
			  <ul class="dropdown-menu pull-right" role="menu">
				  <li><%= link_to 'Editar', edit_post_path(post) %></li>
				  <li><%= link_to 'Apagar', post, method: :delete, remote: true %></li>
			  </ul>
			</div>
		<% end %>

		<div class="post-content">
			<%= post.content %>
		</div>
	  

	  <div class="post-footer btn-group">
			<button type="button" class="like btn btn-default">
				<%= link_to fa_icon("thumbs-up lg"), post_likes_like_path(post_id: post.id) %>
				<%= post.likes %>
			</button>
		  <button type="button" class="dislike btn btn-default">
		  	<%= link_to fa_icon("thumbs-down lg"), post_likes_dislike_path(post_id: post.id) %>
				<%= post.dislikes %>
		  </button>
		</div>

	<% end %>
</div>