<header>
	<nav role="navigation">
		<div class="container">

			<div class="dropdown pull-right">
	 			<button class="btn btn-default dropdown-toggle navbar-menu-dropdown" type="button" id="dropdownMenu1" data-toggle="dropdown">
    			<i class="fa fa-bars fa-2x navbar-icon"></i>
  			</button>
  			<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
  				<% if user_signed_in? %>
  					<li role="presentation">
  						<%= link_to current_user.full_name, "/#{current_user.username}" %>
  					</li>
  					<li role="presentation">
  						<%= link_to t('devise.views.sign_out'), destroy_user_session_path, :method => :delete %>
  					</li>
  					<li role="presentation" class="divider"></li>
  				<% end %>
			    <li role="presentation"><%= link_to 'Sobre', sobre_path %></li>
			    <li role="presentation"><%= link_to 'Termos de Uso', termos_path %></li>
			  </ul>
